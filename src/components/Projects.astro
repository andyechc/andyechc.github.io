---
export interface Props {
  projects: Array<{
    id: number;
    title: string;
    description: string;
    image: string;
    technologies: string[];
    liveUrl?: string;
    githubUrl?: string;
    featured: boolean;
    private?: boolean;
    noCode?: boolean;
    noPreview?: boolean;
  }>;
}

const { projects } = Astro.props;
const featuredProjects = projects.filter(project => project.featured);
const otherProjects = projects.filter(project => !project.featured);
---

<section class="projects py-20 bg-black">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-bold mb-16 text-center fade-in">
      Proyectos Destacados
    </h2>
    
    {featuredProjects.length > 0 && (
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        {featuredProjects.map((project, index) => (
          <div class="project-card slide-up" style={`animation-delay: ${index * 0.1}s`}>
            <div class="bg-gray-900 rounded-3xl overflow-hidden group cursor-pointer">
              <div class="aspect-video bg-gray-800 relative overflow-hidden">
                <img 
                  src={project.image} 
                  alt={project.title}
                  class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                  loading="lazy"
                />
              </div>
              
              <div class="p-6">
                <h3 class="text-xl font-semibold mb-3">{project.title}</h3>
                <p class="text-gray-300 mb-4 line-clamp-3">{project.description}</p>
                
                <div class="flex flex-wrap gap-2 mb-6">
                  {project.technologies.map((tech, techIndex) => (
                    <span 
                      class="px-3 py-1 bg-gray-800 text-white text-sm rounded-3xl"
                    >
                      {tech}
                    </span>
                  ))}
                </div>
                
                <div class="flex space-x-4">
                  {project.liveUrl && !project.noPreview ? (
                    <a 
                      href={project.liveUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center space-x-2 text-white hover:opacity-70 transition-opacity"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                      <span class="text-sm font-medium">Demo</span>
                    </a>
                  ) : project.noPreview ? (
                    <div class="flex items-center space-x-2 text-gray-500">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                      </svg>
                      <span class="text-sm font-medium">No disponible</span>
                    </div>
                  ) : (
                    <div class="flex items-center space-x-2 text-gray-500">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
                      </svg>
                      <span class="text-sm font-medium">Sin demo</span>
                    </div>
                  )}
                  
                  {project.githubUrl && !project.noCode ? (
                    <a 
                      href={project.githubUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center space-x-2 text-white hover:opacity-70 transition-opacity"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                      <span class="text-sm font-medium">Código</span>
                    </a>
                  ) : project.noCode ? (
                    <div class="flex items-center space-x-2 text-gray-500">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                      </svg>
                      <span class="text-sm font-medium">Privado</span>
                    </div>
                  ) : (
                    <div class="flex items-center space-x-2 text-gray-500">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
                      </svg>
                      <span class="text-sm font-medium">Sin código</span>
                    </div>
                  )}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    )}
    
    {otherProjects.length > 0 && (
      <div>
        <h3 class="text-2xl font-semibold mb-8 text-center">Otros Proyectos</h3>
        <div class="grid md:grid-cols-2 gap-6">
          {otherProjects.map((project, index) => (
            <div class="project-card-simple slide-up" style={`animation-delay: ${index * 0.1}s`}>
              <div class="border border-gray-700 rounded-3xl p-6 hover:border-gray-600 transition-colors">
                <h3 class="text-lg font-semibold mb-2">{project.title}</h3>
                <p class="text-gray-300 mb-4 text-sm line-clamp-2">{project.description}</p>
                
                <div class="flex flex-wrap gap-2 mb-4">
                  {project.technologies.slice(0, 3).map((tech, techIndex) => (
                    <span 
                      class="px-2 py-1 bg-gray-800 text-gray-300 text-xs rounded-3xl"
                    >
                      {tech}
                    </span>
                  ))}
                </div>
                
                <div class="flex space-x-3">
                  {project.liveUrl && !project.noPreview ? (
                    <a 
                      href={project.liveUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm text-white hover:opacity-70 transition-opacity"
                    >
                      Demo →
                    </a>
                  ) : project.noPreview ? (
                    <span class="text-sm text-gray-500">No disponible</span>
                  ) : (
                    <span class="text-sm text-gray-500">Sin demo</span>
                  )}
                  
                  {project.githubUrl && !project.noCode ? (
                    <a 
                      href={project.githubUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm text-white hover:opacity-70 transition-opacity"
                    >
                      Código →
                    </a>
                  ) : project.noCode ? (
                    <span class="text-sm text-gray-500">Privado</span>
                  ) : (
                    <span class="text-sm text-gray-500">Sin código</span>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
</section>

<style>
  .project-card {
    opacity: 0;
    animation: slideUp 0.6s ease-out forwards;
  }
  
  .project-card-simple {
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
